<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/ionicons.min.css">
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
</head>

<body style="padding-top:15px;" class="body-content">

    <!--HEADER-->
        <!--IMG HEADER-->
            <div class="body-content">
                <img class="logo-header" src="~/Asset/img/AXA LOGO.jpg" />
                <h4 style="display:inline; font-weight:bold;">Claim Support System</h4>
            </div>
        <!--NAVBAR HEADER-->
            <div class="navbar-header-self">
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Profil</a></li>
                </ul>
            </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center">Copyright &copy; @DateTime.Now.Year - PT AXA Services Indonesia. All Rights Reserved.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
